{
  "name": "delivery-track-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de rastreamento de entregas",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "kafka:start": "docker run -d --name kafka-test -p 9092:9092 apache/kafka:2.8.1",
    "kafka:stop": "docker stop kafka-test && docker rm kafka-test"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/websocket": "^11.1.0",
    "@prisma/client": "^6.8.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.1.0",
    "fast-jwt": "^6.0.2",
    "fastify": "^5.4.0",
    "kafkajs": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.4",
    "prisma": "^6.11.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
